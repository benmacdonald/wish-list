<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
  </script>
<% end %>

<!DOCTYPE html>
<html>
<head>
<style>
.floating-box {
    float: left;
    width: 150px;
    height: 150px;
    margin: 10px;
    ##border: 3px solid #73AD21;
}

.after-box {
    clear: left;
  ##border: 3px solid red;
}
</style>
</head>
<body>

<h1>Merchant Analytics</h1>
<p>Products: </p>

<% @products.each do |prod| %>
  <div class="floating-box">
  	<img src=<%= prod.images[0].src %> alt="Mountain View" style="width:150px;height:150px;">
  </div>

  <div class="floating-box">
      <p><b><%= prod.title %></b></p>
  		<p>14 people want it at the price of @ 12$ /n</p>
  		<p>10 people want it at the price of @ 13$ /n</p>
  </div>
<% end %>

</body>
</html>
