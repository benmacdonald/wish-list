<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
  </script>
<% end %>

<!DOCTYPE html>
<html>
<head>
<style>
  h1, h2, h3, p {
    font-family: Futura;
    font-size: 10pt;
  }

.floating-box {
    float: left;
    width: 150px;
    height: 150px;
    margin: 10px;
    #border: 3px solid #73AD21;
}
</style>
</head>
<body>

<h1 style="font-size: 20pt">Merchant Analytics</h1>
<p>Products: </p>

<% @products.each do |prod| %>
  <div class="floating-box">
  	<a href="http://<%= @shop.domain %>/admin/products/<%= prod.id %>?locale=en" target="_blank"><img src=<%= prod.images[0].src %> alt="Product Image" style="width:150px;height:150px;"></a>
  </div>

  <div class="floating-box">
      <h3> <%= prod.title %></h3>
      <p>Current price: <%= prod.variants[0].price %></p>
  		<% if @wishlist[prod.id] %>
        <p>Averge wish price: <%= sprintf('%.2f', @wishlist[prod.id][:averageWishPrices]) %></p>
        <p>Number of wishes: <%= @wishlist[prod.id][:count]%></p>
      <% else %>
        <p>No wishes yet.</p>
      <% end %>
  </div>
<% end %>

</body>
</html>
